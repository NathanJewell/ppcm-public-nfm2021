<?xml version="1.0"?>
<launch>

<!--	This launch file uses the true x, y coordinates from Gazebo and maps it to /pf/viz/inferred_pose to insert into pure_pursuit code.-->
  	<include file="$(find racecar_gazebo)/launch/racecar.launch">
		  <arg name="world_name" value="track_empty"/>
  	</include>
  
  	<!-- Run map server -->
	<arg name="map_file" default="$(find mpc_racecar)/maps/kelley_third_floor.yaml"/>
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

        <node pkg="mpc_racecar" name="remap_gazebo_pose_node" type="remap_gazebo_pose.py" output="screen" />
  	<node pkg="mpc_racecar" name="sim_connector_node" type="sim_connector.py" output="screen"/>

  	<!--  ************** Visualisation **************  -->
        <node name="rviz" pkg="rviz" type="rviz" args="-d $(find mpc_racecar)/rviz/mpc_gazebo_navigation.rviz"/>


</launch>
